@{            
    ViewData["Title"] = "Joe's Movie Collection";
}
@model List<NewMovie>
<br />
<br />

<table class="table table-bordered table-striped">

    <thead class="font-weight-bold">
        <tr> 
            <td>Movie Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent To</td>
            <td>Notes</td>
        </tr>

    </thead>

    <tbody>
        @foreach(var x in Model)
            {
        <tr>
            <td>@x.Category.CategoryName</td>
            <td>@x.MovieTitle</td>
            <td>@x.MovieYear</td>
            <td>@x.MovieDirector</td>
            <td>@x.MovieRating</td>
            <td>@x.Edited</td>
            <td>@x.LentTo</td>
            <td>@x.Notes</td>

            <td><a asp-controller="Home" asp-action="Edit" asp-route-movieID="@x.MovieID">Edit</a></td>
            <td><a asp-controller="Home" asp-action="Delete" asp-route-movieID="@x.MovieID">Delete</a></td>
        </tr>
            }
    </tbody>

</table>
