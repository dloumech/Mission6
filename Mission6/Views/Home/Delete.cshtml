@{
    ViewData["Title"] = "Delete Movie";
}

@model NewMovie

<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete @Model.MovieTitle from Joel's list?</h3>

<form method="post" asp-action="Delete">
    <button type="submit">Delete</button>
    <br />
    <br />
    <a asp-controller="Home" asp-action="MovieList" class="btn btn-primary">Cancel</a>

    <input type="hidden" asp-for="MovieID"/>
</form>