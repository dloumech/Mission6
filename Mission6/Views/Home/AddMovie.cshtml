@{
    ViewData["Title"] = "Add Movie";
}

@model Mission6AssignmentDarbyMecham.Models.NewMovie

<h1>Add Movies to Joel's Collection Here:</h1>

<div>
    <form method="post">
        <label asp-for="MovieCategory">Category:</label>
        <input asp-for="MovieCategory" />
        <br />
        <label asp-for="MovieTitle">Movie Title:</label>
        <input asp-for="MovieTitle" />
        <br />
        <label asp-for="MovieYear">Year:</label>
        <input asp-for="MovieYear" />
        <br />
        <label asp-for="MovieDirector">Director:</label>
        <input asp-for="MovieDirector" />
        <br />
        <label asp-for="MovieRating">Rating:</label>
        <select asp-for="MovieRating">
            <option value="g">G</option>
            <option value="pg">PG</option>
            <option value="pg13">PG-13</option>
            <option value="r">R</option>
        </select>
        <br />
        <label asp-for="Edited">Edited:</label>
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <br />
        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="LentTo" />
        <br />
        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes"/>
        <br />
        <button type="submit">Add Movie</button>
    </form>
</div>